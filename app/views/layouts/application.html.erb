

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>ForumSena</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
	
	<%= csrf_meta_tags %>
	<link rel="stylesheet" href="<link href='http://fonts.googleapis.com/css?family=Ubuntu:400,500,700' rel='stylesheet' type='text/css'>">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.min.css">
</head>
<body class="<%= @home_page ? 'homepage' : ''%>">


	<div class="main_header clear_fix">

		<div class="wrapper1">


			<nav class="navbar navbar-default" role="navigation">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button >
					<div>
						
					<%= link_to "Comunidad Sena", root_path, class: 'navbar-brand letra1'%>
					</div>

				</div>
				
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse navbar-ex1-collapse">
					<ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
						<li><%= link_to "Post", posts_path, class: 'active'%></li>
						<li><%= link_to "New Post", new_post_path %></li>
						<li><%= link_to "Pin", pins_path, class: 'active'%></li>
						<li><%= link_to "New Pin", new_pin_path %></li>
						<li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: 'active' %></li>
						
						<%else%>
						<li><%= link_to "Sign Up", new_user_registration_path, class: 'active'%></li>
						<li><%= link_to "Sign In", new_user_session_path, class: 'active' %></li>
						<% end %>

						
					</ul>
					
				</div><!-- /.navbar-collapse -->
			</nav>

			
		</div>	


	</div>

 


	<div class="container invisible">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
	</div>

	

	<div class="container">
		<%= yield%>
	</div>
</body>


</html>



