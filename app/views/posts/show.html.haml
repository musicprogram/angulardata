#posts_content
	%h1= @post.title
	%p= @post.content
	%br/
	%br/
	#comments
		%h2
		= @post.comments.count 
		
		= render @post.comments

		
		= render "comments/form"
		

	%br/
	%hr/
	%br/
	
	= link_to "Edit", edit_post_path(@post), class: "button"
	= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure want to do this?"}, class: "button"
	

	