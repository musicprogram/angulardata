%body.homepagee
	#pins.transitions-enabled
		-@pins.each do |pin|
			.box.panel.panel-default
				= link_to (image_tag pin.image.url), pin
				.panel-body
					%h2= link_to pin.title, pin
					%p.user
					Published at
					= time_ago_in_words(pin.created_at)
					By
					= pin.user.name_profile
				